<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Home</title>
  <link rel="stylesheet" href="/styles.css"><!-- optional if you have CSS -->
</head>

<body>
  <h1>TOP: Mini Messageboard</h1>

  <%- include("navbar", {links: links}) %>

    <ul>
      <% messages.forEach((m,idx)=> { %>
        <li>
          <div>Message: <%= m.text %>
          </div>
          <div>User: <%= m.user %>
          </div>
          <div>Date: <%= m.added.toLocaleString() %>
          </div>
          <a href="/messages/<%= idx %>">open</a>
        </li>

        <%}) %>
    </ul>

</body>

</html>